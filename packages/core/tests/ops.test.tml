// Tests for core::ops module
// Note: Primitive type methods (add, sub, mul, etc.) are builtin
use test

@test
func test_i32_add() -> I32 {
    let a: I32 = 10
    let b: I32 = 20
    let c: I32 = a.add(b)
    assert(c == 30, "10.add(20) should be 30")
    return 0
}

@test
func test_i32_sub() -> I32 {
    let a: I32 = 30
    let b: I32 = 10
    let c: I32 = a.sub(b)
    assert(c == 20, "30.sub(10) should be 20")
    return 0
}

@test
func test_i32_mul() -> I32 {
    let a: I32 = 6
    let b: I32 = 7
    let c: I32 = a.mul(b)
    assert(c == 42, "6.mul(7) should be 42")
    return 0
}

@test
func test_i32_div() -> I32 {
    let a: I32 = 100
    let b: I32 = 5
    let c: I32 = a.div(b)
    assert(c == 20, "100.div(5) should be 20")
    return 0
}

@test
func test_i32_rem() -> I32 {
    let a: I32 = 17
    let b: I32 = 5
    let c: I32 = a.rem(b)
    assert(c == 2, "17.rem(5) should be 2")
    return 0
}

@test
func test_i32_neg() -> I32 {
    let a: I32 = 42
    let b: I32 = a.neg()
    assert(b == -42, "42.neg() should be -42")
    return 0
}

@test
func test_bool_negate() -> I32 {
    let a: Bool = true
    let b: Bool = a.negate()
    assert(b == false, "true.negate() should be false")

    let c: Bool = false
    let d: Bool = c.negate()
    assert(d == true, "false.negate() should be true")
    return 0
}

@test
func test_f64_add() -> I32 {
    let a: F64 = 1.5
    let b: F64 = 2.5
    let c: F64 = a.add(b)
    assert(c == 4.0, "1.5.add(2.5) should be 4.0")
    return 0
}

@test
func test_f64_mul() -> I32 {
    let a: F64 = 3.0
    let b: F64 = 4.0
    let c: F64 = a.mul(b)
    assert(c == 12.0, "3.0.mul(4.0) should be 12.0")
    return 0
}
