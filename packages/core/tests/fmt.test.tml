use test

@test
func test_i32_to_string() -> I32 {
    let x: I32 = 42
    let s: Str = x.to_string()
    assert(s == "42", "42.to_string() should be '42'")
    return 0
}

@test
func test_bool_to_string() -> I32 {
    let t: Bool = true
    let f: Bool = false
    assert(t.to_string() == "true", "true.to_string() should be 'true'")
    assert(f.to_string() == "false", "false.to_string() should be 'false'")
    return 0
}

