@test
func test_ordering_to_string() -> I32 {
    assert(Ordering::Less.to_string() == "Less", "Less.to_string()")
    assert(Ordering::Equal.to_string() == "Equal", "Equal.to_string()")
    assert(Ordering::Greater.to_string() == "Greater", "Greater.to_string()")
    return 0
}

@test
func test_ordering_debug_string() -> I32 {
    assert(Ordering::Less.debug_string() == "Ordering::Less", "Less.debug_string()")
    assert(Ordering::Equal.debug_string() == "Ordering::Equal", "Equal.debug_string()")
    assert(Ordering::Greater.debug_string() == "Ordering::Greater", "Greater.debug_string()")
    return 0
}
