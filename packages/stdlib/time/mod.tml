// TML Standard Library - Time Module
// Similar to Rust's std::time
//
// Usage in TML:
//   use std::time::Instant
//
//   let start = Instant::now()
//   // ... do work ...
//   let elapsed = start.elapsed()
//   println("Took {} seconds", elapsed.as_secs_f64())
//
// Currently implemented as builtin functions:
//   - time_ms() -> I32         : Current time in milliseconds
//   - time_us() -> I64         : Current time in microseconds
//   - time_ns() -> I64         : Current time in nanoseconds
//   - elapsed_ms(start: I32)   : Elapsed milliseconds since start
//   - elapsed_secs(start_ms: I32) -> Str : Elapsed time as "X.XXX" seconds

