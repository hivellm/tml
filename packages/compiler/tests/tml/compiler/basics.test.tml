use test// Basic Language Features Test Suite

@test
func arithmetic() -> I32 {
    let a: I32 = 10 + 5
    assert_eq_i32(a, 15, "10 + 5 should equal 15")

    let b: I32 = 20 - 5
    assert_eq_i32(b, 15, "20 - 5 should equal 15")

    let c: I32 = 5 * 4
    assert_eq_i32(c, 20, "5 * 4 should equal 20")

    let d: I32 = 20 / 4
    assert_eq_i32(d, 5, "20 / 4 should equal 5")

    return 0
}

@test
func variables() -> I32 {
    let x: I32 = 42
    assert_eq_i32(x, 42, "x should equal 42")

    let mut y: I32 = 10
    y = 20
    assert_eq_i32(y, 20, "y should equal 20 after assignment")

    return 0
}

@test
func conditionals() -> I32 {
    let result: I32 = if 5 > 3 then 1 else 0
    assert_eq_i32(result, 1, "5 > 3 should be true")

    let result2: I32 = if 2 > 10 then 1 else 0
    assert_eq_i32(result2, 0, "2 > 10 should be false")

    return 0
}