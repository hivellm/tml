// Test 06: Loops - using while loop (for loops need range expression support)
func main() {
    // Simple counting with while-style loop
    let mut i: I32 = 0
    loop {
        if i >= 5 {
            break
        }
        println(i)
        i = i + 1
    }

    // Summing numbers
    let mut sum: I32 = 0
    let mut j: I32 = 1
    loop {
        if j > 10 {
            break
        }
        sum = sum + j
        j = j + 1
    }
    println(sum)  // 55
}
