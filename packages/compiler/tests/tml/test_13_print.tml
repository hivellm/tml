// Test 13: Unified print/println system
func main() {
    // println for integers
    println(42)      // 42
    println(100)     // 100

    // println for expressions
    println(2 + 3)   // 5
    println(10 * 5)  // 50

    // println for booleans
    println(true)    // true
    println(false)   // false
    println(5 > 3)   // true
    println(5 < 3)   // false

    // Variables with println
    let x = 10
    let y = 20
    println(x)       // 10
    println(y)       // 20
    println(x + y)   // 30

    // Boolean variables
    let flag = true
    println(flag)    // true

    // print (no newline) followed by println
    print(1)
    print(2)
    println(3)       // 123 on one line

    // Strings
    println("hello world")  // hello world

    // Empty println (just newline)
    println()

    // Format strings
    println("The answer is {}", 42)
    println("Sum of {} and {} is {}", 5, 3, 8)

    // Format with variables
    let a = 100
    let b = 200
    println("a={} b={}", a, b)

    // Format with booleans
    println("Is valid: {}", true)
    println("All done: {}", false)
}
