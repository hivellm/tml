// Test Assertions Demo

@test
func test_basic_assertions() -> I32 {
    println("Testing assertions...")

    // assert() - test conditions
    assert(true, "True should be true")
    assert(5 > 3, "5 should be greater than 3")

    // assert_eq_i32() - test integer equality
    let a: I32 = 10 + 5
    assert_eq_i32(a, 15, "10 + 5 should equal 15")

    // assert_ne_i32() - test integer inequality
    assert_ne_i32(a, 10, "Result should not equal 10")

    // assert_eq_bool() - test boolean equality
    let b: Bool = true
    assert_eq_bool(b, true, "b should be true")

    println("All assertions passed!")
    return 0
}
