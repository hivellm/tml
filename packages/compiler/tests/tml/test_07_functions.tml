// Test 07: Functions
func add(a: I32, b: I32) -> I32 {
    return a + b
}

func greet(name: Str) {
    println(name)
}

func factorial(n: I32) -> I32 {
    if n <= 1 {
        return 1
    } else {
        return n * factorial(n - 1)
    }
}

func main() {
    // Basic function call
    let result = add(10, 20)
    println(result)  // 30

    // Function with no return
    greet("TML User")

    // Recursive function
    let fact5 = factorial(5)
    println(fact5)  // 120
}
