use test// Struct Tests

type Point {
    x: I32,
    y: I32,
}

type Rectangle {
    origin: Point,
    width: I32,
    height: I32,
}

@test
func test_point_creation() -> I32 {
    let p: Point = Point { x: 10, y: 20 }
    assert_eq_i32(p.x, 10, "Point x should be 10")
    assert_eq_i32(p.y, 20, "Point y should be 20")
    return 0
}

@test
func test_rectangle_creation() -> I32 {
    let rect: Rectangle = Rectangle { 
        origin: Point { x: 0, y: 0 }, 
        width: 100, 
        height: 50 
    }
    assert_eq_i32(rect.width, 100, "Rectangle width should be 100")
    assert_eq_i32(rect.height, 50, "Rectangle height should be 50")
    assert_eq_i32(rect.origin.x, 0, "Rectangle origin.x should be 0")
    return 0
}