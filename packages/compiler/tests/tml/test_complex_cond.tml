// Test complex conditionals

func get_value() -> I32 {
    return 42
}

func is_positive(x: I32) -> Bool {
    return x > 0
}

func main() -> I32 {
    // Test 1: Function call in condition
    if get_value() > 40 {
        println("Test 1: OK - function in condition")
    } else {
        println("Test 1: FAIL")
        return 1
    }

    // Test 2: Multiple conditions with 'and'
    let a: I32 = 10
    let b: I32 = 20
    if a > 5 and b < 30 {
        println("Test 2: OK - multiple and")
    } else {
        println("Test 2: FAIL")
        return 2
    }

    // Test 3: Multiple conditions with 'or'
    if a > 100 or b == 20 {
        println("Test 3: OK - multiple or")
    } else {
        println("Test 3: FAIL")
        return 3
    }

    // Test 4: Nested conditions
    if a > 0 and (b > 10 or a < 5) {
        println("Test 4: OK - nested conditions")
    } else {
        println("Test 4: FAIL")
        return 4
    }

    // Test 5: Function returning bool in condition
    if is_positive(a) {
        println("Test 5: OK - bool function")
    } else {
        println("Test 5: FAIL")
        return 5
    }

    // Test 6: Complex expression
    let x: I32 = 5
    let y: I32 = 10
    if x + y > 10 and x * 2 == y {
        println("Test 6: OK - complex expr")
    } else {
        println("Test 6: FAIL")
        return 6
    }

    println("=== All complex conditional tests passed! ===")
    return 0
}
