// Dim returns the maximum of x-y or 0 (positive difference)

pub func dim(x: F64, y: F64) -> F64 {
    let diff: F64 = x - y
    return if diff > 0.0 then diff else 0.0
}

pub func dim_i32(x: I32, y: I32) -> I32 {
    let diff: I32 = x - y
    return if diff > 0 then diff else 0
}

pub func dim_i64(x: I64, y: I64) -> I64 {
    let diff: I64 = x - y
    return if diff > 0 then diff else 0
}
