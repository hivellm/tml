// Inverse hyperbolic tangent function

use log

// atanh(x) = 0.5 * log((1 + x) / (1 - x))
pub func atanh(x: F64) -> F64 {
    if x == 0.0 then return 0.0
    if x <= -1.0 then return 0.0  // Undefined
    if x >= 1.0 then return 0.0   // Undefined

    let numerator: F64 = 1.0 + x
    let denominator: F64 = 1.0 - x

    if denominator == 0.0 then return 0.0

    return 0.5 * log(numerator / denominator)
}
