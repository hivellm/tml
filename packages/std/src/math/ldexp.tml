// Ldexp is the inverse of Frexp
// It returns frac Ã— 2^exp

pub func ldexp(frac: F64, exp: I32) -> F64 {
    if frac == 0.0 then return 0.0

    let mut result: F64 = frac
    let mut power: I32 = exp

    if power > 0 then {
        let mut i: I32 = 0
        loop {
            if i >= power then break
            result = result * 2.0
            i = i + 1
        }
    } else {
        if power < 0 then {
            let mut i: I32 = 0
            loop {
                if i >= -power then break
                result = result / 2.0
                i = i + 1
            }
        }
    }

    return result
}
