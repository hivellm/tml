// Hyperbolic tangent function

use exp

// tanh(x) = (e^x - e^-x) / (e^x + e^-x)
pub func tanh(x: F64) -> F64 {
    if x == 0.0 then return 0.0

    let exp_x: F64 = exp(x)
    let exp_neg_x: F64 = exp(-x)

    let numerator: F64 = exp_x - exp_neg_x
    let denominator: F64 = exp_x + exp_neg_x

    if denominator == 0.0 then return 0.0

    return numerator / denominator
}
