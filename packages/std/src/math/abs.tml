// Absolute value functions

pub func abs_i32(n: I32) -> I32 {
    return if n < 0 then -n else n
}

pub func abs_i64(n: I64) -> I64 {
    return if n < 0 then -n else n
}

pub func abs_f64(x: F64) -> F64 {
    return if x < 0.0 then -x else x
}

// Default abs for F64 (matches Go's math.Abs)
pub func abs(x: F64) -> F64 {
    return if x < 0.0 then -x else x
}
