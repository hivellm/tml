// Formatting utilities

/// Format trait for types that can be formatted
pub behavior Format {
    func format(this) -> Str
}

/// Debug trait for types that can be debug-formatted
pub behavior Debug {
    func debug(this) -> Str
}

/// Display trait for types that can be displayed
pub behavior Display {
    func display(this) -> Str
}

// Implement Display for primitives
impl Display for I32 {
    pub func display(this) -> Str {
        return this.to_string()
    }
}

impl Display for Str {
    pub func display(this) -> Str {
        return this
    }
}

impl Display for Bool {
    pub func display(this) -> Str {
        return when this {
            true => "true",
            false => "false",
        }
    }
}

/// Format a string with arguments (placeholder for future implementation)
pub func format(template: Str) -> Str {
    return template
}

@test
func test_display_i32() {
    let x: I32 = 42
    assert_eq!(x.display(), "42")
}
