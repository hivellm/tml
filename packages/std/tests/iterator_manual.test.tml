// Tests for manual iteration using Iterator behavior
use test
use std::iter

// ============================================================================
// Manual iteration tests using std::iter module
// ============================================================================

@test
func test_range_creation() -> I32 {
    let r: Range = range(0, 10)
    assert(r.current == 0, "Range should start at 0")
    assert(r.end == 10, "Range should end at 10")
    return 0
}

@test
func test_range_iteration() -> I32 {
    // Test using the Range from std::iter
    let r: Range = range(5, 8)

    // Verify the range has correct values
    assert(r.current == 5, "Should start at 5")
    assert(r.end == 8, "Should end at 8")
    return 0
}

@test
func test_for_loop_with_range_syntax() -> I32 {
    let mut sum: I32 = 0
    for i in 0 to 5 {
        sum = sum + i
    }
    // 0 + 1 + 2 + 3 + 4 = 10
    assert(sum == 10, "Sum of 0 to 5 should be 10")
    return 0
}
