// Simple iterator tests - direct range usage
use test
use std::iter

@test
func test_range_sum_builtin() -> I32 {
    // Test using the built-in for-in range syntax
    let mut sum: I32 = 0
    for i in 1 to 5 {
        sum = sum + i
    }
    // 1 + 2 + 3 + 4 = 10
    assert(sum == 10, "Sum of 1 to 5 should be 10")
    return 0
}

@test
func test_range_creation() -> I32 {
    let r: Range = range(0, 10)
    assert(r.current == 0, "Range should start at 0")
    assert(r.end == 10, "Range should end at 10")
    return 0
}

@test
func test_inclusive_range_builtin() -> I32 {
    let mut sum: I32 = 0
    for i in 1 through 5 {
        sum = sum + i
    }
    // 1 + 2 + 3 + 4 + 5 = 15
    assert(sum == 15, "Sum of 1 through 5 should be 15")
    return 0
}
