// Tests for std::net::error - NetErrorKind and NetError
use test
use std::net::error::{NetErrorKind, NetError}

@test
func test_net_error_kind_values() -> I32 {
    assert_eq(NetErrorKind::ConnectionRefused().raw(), 1, "ConnectionRefused is 1")
    assert_eq(NetErrorKind::TimedOut().raw(), 6, "TimedOut is 6")
    assert_eq(NetErrorKind::WouldBlock().raw(), 9, "WouldBlock is 9")
    return 0
}

@test
func test_net_error_kind_checks() -> I32 {
    assert(NetErrorKind::ConnectionRefused().is_connection_refused(), "ConnectionRefused check")
    assert(not NetErrorKind::TimedOut().is_connection_refused(), "TimedOut is not ConnectionRefused")
    assert(NetErrorKind::WouldBlock().is_would_block(), "WouldBlock check")
    return 0
}

@test
func test_net_error_convenience() -> I32 {
    let err: NetError = NetError::connection_refused()
    assert(err.is_connection_refused(), "connection_refused helper")
    assert(not err.is_would_block(), "not would_block")
    return 0
}
