// Maybe map test with explicit type annotations
// Tests the builtin Maybe type with map-like operations
use test

@test
func test_maybe_unwrap_just() {
    let x: Maybe[I32] = Just(5)
    assert_eq(x.unwrap_or(0), 5)
    println("Maybe unwrap Just test passed!")
}

@test
func test_maybe_unwrap_nothing() {
    let n: Maybe[I32] = Nothing
    assert_eq(n.unwrap_or(42), 42)
    println("Maybe unwrap Nothing test passed!")
}

@test
func test_maybe_is_just() {
    let x: Maybe[I32] = Just(10)
    assert(x.is_just(), "Just(10).is_just() should be true")
    println("Maybe is_just test passed!")
}

@test
func test_maybe_is_nothing() {
    let n: Maybe[I32] = Nothing
    assert(n.is_nothing(), "Nothing.is_nothing() should be true")
    println("Maybe is_nothing test passed!")
}
