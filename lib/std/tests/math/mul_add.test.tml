use test
use std::math

@test
func test_mul_add_basic() -> I32 {
    let result: F64 = math::mul_add(2.0, 3.0, 4.0)
    assert_eq(result, 10.0)
    return 0
}

@test
func test_mul_add_negative() -> I32 {
    let result: F64 = math::mul_add(-1.0, 5.0, 10.0)
    assert_eq(result, 5.0)
    return 0
}

@test
func test_mul_add_zero() -> I32 {
    let result: F64 = math::mul_add(0.0, 100.0, 7.0)
    assert_eq(result, 7.0)
    return 0
}

@test
func test_fract_positive() -> I32 {
    let result: F64 = math::fract(3.75)
    assert_eq(result, 0.75)
    return 0
}

@test
func test_fract_negative() -> I32 {
    let result: F64 = math::fract(-2.25)
    assert_eq(result, -0.25)
    return 0
}

@test
func test_fract_integer() -> I32 {
    let result: F64 = math::fract(5.0)
    assert_eq(result, 0.0)
    return 0
}

@test
func test_signum_positive() -> I32 {
    assert_eq(math::signum(42.0), 1.0)
    return 0
}

@test
func test_signum_negative() -> I32 {
    assert_eq(math::signum(-3.14), -1.0)
    return 0
}

@test
func test_signum_zero() -> I32 {
    assert_eq(math::signum(0.0), 0.0)
    return 0
}
