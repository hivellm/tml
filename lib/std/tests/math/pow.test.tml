// Math module: pow function test
use test::{assert_eq, assert}
use std::math

@test
func test_pow_basic() -> I32 {
    let result = math::pow(2.0, 3.0)
    assert_eq(result, 8.0, "2^3 should be 8")
    return 0
}

@test
func test_pow_square() -> I32 {
    let result = math::pow(5.0, 2.0)
    assert_eq(result, 25.0, "5^2 should be 25")
    return 0
}

@test
func test_pow_one() -> I32 {
    let result = math::pow(7.0, 1.0)
    assert_eq(result, 7.0, "x^1 should be x")
    return 0
}

@test
func test_pow_zero_exp() -> I32 {
    let result = math::pow(42.0, 0.0)
    assert_eq(result, 1.0, "x^0 should be 1")
    return 0
}

@test
func test_pow_fractional() -> I32 {
    let result = math::pow(4.0, 0.5)
    assert_eq(result, 2.0, "4^0.5 should be 2 (sqrt)")
    return 0
}
