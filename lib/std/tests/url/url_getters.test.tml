// Tests for Url getter methods â€” get_scheme, get_host, get_port, get_path, get_query, get_fragment
use test
use std::url::Url

@test
func test_url_get_scheme() -> I32 {
    let result = Url::parse("https://example.com/path")
    when result {
        Ok(url) => assert_eq(url.get_scheme(), "https", "get_scheme should return https"),
        Err(_) => assert(false, "parse should succeed")
    }
    0
}

