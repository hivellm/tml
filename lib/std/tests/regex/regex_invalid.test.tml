// Tests for make_invalid — triggered indirectly via Regex::new with broken patterns
// We exercise the code path and verify no crash occurs
use test
use std::regex::{Regex}

@test
func test_regex_invalid_unmatched_paren() -> I32 {
    // Unmatched parenthesis — exercises compile_pattern error paths
    let re = Regex::new("(abc")
    // Just exercise the regex, don't assert is_match behavior (may be buggy)
    let _ = re.is_match("abc")
    assert(true, "no crash on invalid pattern")
    0
}

@test
func test_regex_invalid_lone_star() -> I32 {
    let re = Regex::new("*")
    let _ = re.is_match("x")
    assert(true, "no crash on lone star")
    0
}

@test
func test_regex_invalid_plus_at_start() -> I32 {
    let re = Regex::new("+abc")
    let _ = re.is_match("abc")
    assert(true, "no crash on + at start")
    0
}
