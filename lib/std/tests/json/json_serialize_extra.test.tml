// Tests for json/serialize â€” more to_json types (I8, I16, U8, U16, U32, U64, F32)
use test
use std::json::Json

@test
func test_i8_to_json() -> I32 {
    let val: I8 = 42 as I8
    let j = val.to_json()
    let s = j.to_string()
    assert_eq(s, "42", "I8 42.to_json()")
    0
}

