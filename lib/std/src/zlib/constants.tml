/// Disable literal context modeling.
pub const BROTLI_PARAM_DISABLE_LITERAL_CONTEXT_MODELING: I32 = 4

/// Uncompressed size hint parameter.
pub const BROTLI_PARAM_SIZE_HINT: I32 = 5

/// Enable large window mode.
