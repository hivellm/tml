/// Stream offset.
pub const BROTLI_PARAM_STREAM_OFFSET: I32 = 9

// ============================================================================
// Brotli Decoder Parameters
// ============================================================================

/// Disable ring-buffer reallocation.
pub const BROTLI_DECODER_PARAM_DISABLE_RING_BUFFER_REALLOCATION: I32 = 0

/// Enable large window mode in decoder.
pub const BROTLI_DECODER_PARAM_LARGE_WINDOW: I32 = 1

