//! Tests for test::assertions module - comparison and boolean assertions.
use test
use test::{assert, assert_eq, assert_false, assert_true, assert_str_empty, assert_str_not_empty}

// ============================================================================
// assert_gt tests
// ============================================================================

@test
func test_assert_gt_i32() -> I32 {
    // 10 > 5 should pass
    assert_gt(10, 5, "10 should be greater than 5")
    return 0
}

@test
func test_assert_gt_i64() -> I32 {
    // Large numbers
    let big: I64 = 1000000000 as I64
    let small: I64 = 999999999 as I64
    assert_gt(big, small, "big should be greater than small")
    return 0
}

@test
func test_assert_gt_negative() -> I32 {
    // -5 > -10 should pass
    assert_gt(-5, -10, "-5 should be greater than -10")
    return 0
}

// ============================================================================
// assert_gte tests
// ============================================================================

@test
func test_assert_gte_greater() -> I32 {
    // 10 >= 5 should pass
    assert_gte(10, 5, "10 should be >= 5")
    return 0
}

@test
func test_assert_gte_equal() -> I32 {
    // 5 >= 5 should pass
    assert_gte(5, 5, "5 should be >= 5")
    return 0
}

@test
func test_assert_gte_i64() -> I32 {
    let val: I64 = 100 as I64
    assert_gte(val, 100 as I64, "100 should be >= 100")
    assert_gte(val, 50 as I64, "100 should be >= 50")
    return 0
}

