// ============================================================================

@test
func test_assert_true_simple() -> I32 {
    assert_true(true, "true should be true")
    return 0
}

@test
func test_assert_true_expression() -> I32 {
    let x: I32 = 10
    assert_true(x > 5, "10 > 5 should be true")
