// Tests for IoError::debug_string â€” ensuring both Nothing and Just paths are covered
use test::{assert, assert_eq}
use core::error::{IoError, IoErrorKind}

@test
func test_io_error_debug_no_message() -> I32 {
    let err = IoError::new(IoErrorKind::NotFound)
    let dbg: Str = err.debug_string()
    assert(dbg.contains("IoError"), "debug should contain IoError")
    assert(dbg.contains("Nothing"), "debug should contain Nothing for no message")
    return 0
}

@test
func test_io_error_debug_with_message() -> I32 {
    let err = IoError::with_message(IoErrorKind::PermissionDenied, "/etc/shadow")
    let dbg: Str = err.debug_string()
    assert(dbg.contains("IoError"), "debug should contain IoError")
    assert(dbg.contains("Just"), "debug should contain Just for message")
    assert(dbg.contains("/etc/shadow"), "debug should contain the message")
    return 0
}

@test
func test_io_error_debug_timed_out() -> I32 {
    let err = IoError::new(IoErrorKind::TimedOut)
    let dbg: Str = err.debug_string()
    assert(dbg.contains("timed out"), "debug should contain kind string")
    return 0
}
