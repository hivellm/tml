// Tests for Shared::get_mut
use test::{assert, assert_eq}
use core::alloc::shared::Shared

@test
func test_shared_get_mut_unique() -> I32 {
    var s: Shared[I32] = Shared::new(42)
    assert(s.is_unique(), "new Shared should be unique")
    let maybe_ptr = s.get_mut()
    assert(maybe_ptr.is_just(), "get_mut on unique should return Just")
    return 0
}

@test
func test_shared_get_mut_not_unique() -> I32 {
    var s: Shared[I32] = Shared::new(42)
    let s2: Shared[I32] = s.duplicate()
    assert(not s.is_unique(), "duplicated Shared should not be unique")
    let maybe_ptr = s.get_mut()
    assert(maybe_ptr.is_nothing(), "get_mut on non-unique should return Nothing")
    return 0
}
