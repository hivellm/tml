// Tests for compound assignment operators on float types
use test

@test
func test_f32_add_assign() -> I32 {
    var x: F32 = 1.5
    x += 2.5
    assert_eq((x * 10.0) as I32, 40, "F32 += ")
    return 0
}

@test
func test_f32_sub_assign() -> I32 {
    var x: F32 = 5.0
    x -= 2.0
    assert_eq((x * 10.0) as I32, 30, "F32 -= ")
    return 0
}

@test
func test_f32_mul_assign() -> I32 {
    var x: F32 = 3.0
    x *= 4.0
    assert_eq(x as I32, 12, "F32 *= ")
    return 0
}

@test
func test_f32_div_assign() -> I32 {
    var x: F32 = 10.0
    x /= 4.0
    assert_eq((x * 10.0) as I32, 25, "F32 /= ")
    return 0
}

@test
func test_f64_add_assign() -> I32 {
    var x: F64 = 1.5
    x += 2.5
    assert_eq(x as I64, 4, "F64 += ")
    return 0
}

@test
func test_f64_sub_assign() -> I32 {
    var x: F64 = 100.0
    x -= 42.0
    assert_eq(x as I64, 58, "F64 -= ")
    return 0
}

@test
func test_f64_mul_assign() -> I32 {
    var x: F64 = 7.0
    x *= 6.0
    assert_eq(x as I64, 42, "F64 *= ")
    return 0
}

@test
func test_f64_div_assign() -> I32 {
    var x: F64 = 100.0
    x /= 4.0
    assert_eq(x as I64, 25, "F64 /= ")
    return 0
}
