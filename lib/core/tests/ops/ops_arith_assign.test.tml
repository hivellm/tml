// Consolidated: Compound assignment operators (+=, -=, *=, /=, %=) for all types
// Sources: ops_arith_assign.test.tml (10) + ops_arith_assign_small.test.tml (30) + ops_arith_assign_float.test.tml (8)
// Total: 48 @test functions
use test

// =============================================================================
// I32 compound assignments
// =============================================================================

@test
func test_add_assign_i32() -> I32 {
    var x: I32 = 10
    x += 5
    assert_eq(x, 15, "10 += 5 = 15")
    return 0
}

@test
func test_sub_assign_i32() -> I32 {
    var x: I32 = 20
    x -= 8
    assert_eq(x, 12, "20 -= 8 = 12")
    return 0
}

@test
func test_mul_assign_i32() -> I32 {
    var x: I32 = 6
    x *= 7
    assert_eq(x, 42, "6 *= 7 = 42")
    return 0
}

@test
func test_div_assign_i32() -> I32 {
    var x: I32 = 100
    x /= 5
    assert_eq(x, 20, "100 /= 5 = 20")
    return 0
}

@test
func test_rem_assign_i32() -> I32 {
    var x: I32 = 17
    x %= 5
    assert_eq(x, 2, "17 %= 5 = 2")
    return 0
}

