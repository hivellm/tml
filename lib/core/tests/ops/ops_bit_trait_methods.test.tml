// Tests for ops/bit trait methods: bitand, bitor, bitxor, negate, shift_left, shift_right
// Covers BitAnd, BitOr, BitXor, Not, Shl, Shr behaviors for all integer types
use test

// ==================== I8 ====================
@test
func test_i8_bitand() -> I32 {
    let a: I8 = 12 as I8
    let r: I8 = a.bitand(10 as I8)
    assert_eq(r, 8 as I8, "I8.bitand()")
    return 0
}

@test
func test_i8_bitor() -> I32 {
    let a: I8 = 12 as I8
    let r: I8 = a.bitor(10 as I8)
    assert_eq(r, 14 as I8, "I8.bitor()")
    return 0
}

@test
func test_i8_bitxor() -> I32 {
    let a: I8 = 12 as I8
    let r: I8 = a.bitxor(10 as I8)
    assert_eq(r, 6 as I8, "I8.bitxor()")
    return 0
}

@test
func test_i8_shift_left() -> I32 {
    let a: I8 = 1 as I8
    let r: I8 = a.shift_left(4 as I8)
    assert_eq(r, 16 as I8, "I8.shift_left()")
    return 0
}

@test
func test_i8_shift_right() -> I32 {
    let a: I8 = 16 as I8
    let r: I8 = a.shift_right(4 as I8)
    assert_eq(r, 1 as I8, "I8.shift_right()")
    return 0
}

