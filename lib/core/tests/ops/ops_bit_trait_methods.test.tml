// ==================== Bool Not ====================
@test
func test_bool_negate_true() -> I32 {
    let a: Bool = true
    let r: Bool = a.negate()
    assert_eq(r, false, "Bool.negate(true)")
    return 0
}

@test
func test_bool_negate_false() -> I32 {
    let a: Bool = false
    let r: Bool = a.negate()
    assert_eq(r, true, "Bool.negate(false)")
    return 0
}
