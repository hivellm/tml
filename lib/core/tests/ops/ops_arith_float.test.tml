// Tests for arithmetic operators on float types (F32, F64)
use test

// =============================================================================
// F32 arithmetic
// =============================================================================

@test
func test_f32_add() -> I32 {
    let a: F32 = 1.5
    let b: F32 = 2.5
    let r: F32 = a + b
    assert_eq((r * 10.0) as I32, 40, "F32 1.5+2.5=4.0")
    return 0
}

@test
func test_f32_sub() -> I32 {
    let a: F32 = 5.0
    let b: F32 = 2.0
    let r: F32 = a - b
    assert_eq((r * 10.0) as I32, 30, "F32 5.0-2.0=3.0")
    return 0
}

@test
func test_f32_mul() -> I32 {
    let a: F32 = 3.0
    let b: F32 = 4.0
    let r: F32 = a * b
    assert_eq(r as I32, 12, "F32 3.0*4.0=12.0")
    return 0
}

@test
func test_f32_div() -> I32 {
    let a: F32 = 10.0
    let b: F32 = 4.0
    let r: F32 = a / b
    assert_eq((r * 10.0) as I32, 25, "F32 10.0/4.0=2.5")
    return 0
}

@test
func test_f32_neg() -> I32 {
    let a: F32 = 3.14
    let r: F32 = -a
    assert(r < 0.0, "F32 neg should be negative")
    return 0
}

// =============================================================================
// F64 arithmetic
// =============================================================================

@test
func test_f64_add() -> I32 {
    let a: F64 = 1.5
    let b: F64 = 2.5
    let r: F64 = a + b
    assert_eq((r * 10.0) as I64, 40, "F64 1.5+2.5=4.0")
    return 0
}

@test
func test_f64_sub() -> I32 {
    let a: F64 = 100.0
    let b: F64 = 42.0
    let r: F64 = a - b
    assert_eq(r as I64, 58, "F64 100.0-42.0=58.0")
    return 0
}

@test
func test_f64_mul() -> I32 {
    let a: F64 = 7.0
    let b: F64 = 6.0
    let r: F64 = a * b
    assert_eq(r as I64, 42, "F64 7.0*6.0=42.0")
    return 0
}

@test
func test_f64_div() -> I32 {
    let a: F64 = 22.0
    let b: F64 = 7.0
    let r: F64 = a / b
    assert_eq((r * 100.0) as I64, 314, "F64 22.0/7.0~3.14")
    return 0
}

@test
func test_f64_neg() -> I32 {
    let a: F64 = 42.0
    let r: F64 = -a
    assert_eq(r as I64, -42, "F64 neg 42=-42")
    return 0
}
