// Tests for core::unicode::char - surrogate detection and classification
use test
use core::unicode::char::{is_high_surrogate, is_low_surrogate, is_surrogate, is_cased, is_format, is_private_use}

@test
func test_is_high_surrogate() -> I32 {
    assert(is_high_surrogate(0xD800), "0xD800 should be high surrogate")
    assert(is_high_surrogate(0xDBFF), "0xDBFF should be high surrogate")
    assert(not is_high_surrogate(0xDC00), "0xDC00 is low, not high")
    assert(not is_high_surrogate(0x41), "'A' is not a surrogate")
    return 0
}

@test
func test_is_low_surrogate() -> I32 {
    assert(is_low_surrogate(0xDC00), "0xDC00 should be low surrogate")
    assert(is_low_surrogate(0xDFFF), "0xDFFF should be low surrogate")
    assert(not is_low_surrogate(0xD800), "0xD800 is high, not low")
    assert(not is_low_surrogate(0x41), "'A' is not a surrogate")
    return 0
}

@test
func test_is_surrogate() -> I32 {
    assert(is_surrogate(0xD800), "0xD800 should be surrogate")
    assert(is_surrogate(0xDFFF), "0xDFFF should be surrogate")
    assert(not is_surrogate(0x41), "'A' is not a surrogate")
    assert(not is_surrogate(0xE000), "0xE000 is not a surrogate")
    return 0
}
