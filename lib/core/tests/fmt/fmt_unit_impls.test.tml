// Tests for fmt â€” FmtError display/debug, Alignment debug, Sign display/debug
use test::{assert, assert_eq}
use core::fmt::traits::{FmtError, Alignment, Sign}

@test
func test_fmt_error_to_string() -> I32 {
    let e: FmtError = FmtError::new()
    let s: Str = e.to_string()
    assert_eq(s, "formatting error", "FmtError to_string")
    return 0
}

@test
func test_fmt_error_debug_string() -> I32 {
    let e: FmtError = FmtError::new()
    let s: Str = e.debug_string()
    assert_eq(s, "FmtError", "FmtError debug_string")
    return 0
}

