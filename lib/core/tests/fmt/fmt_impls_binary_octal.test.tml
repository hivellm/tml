// Tests for fmt/impls Binary and Octal implementations across all integer types
use test

// ==================== fmt_binary ====================

@test
func test_u8_fmt_binary() -> I32 {
    let a: U8 = 5 as U8
    let s: Str = a.fmt_binary()
    assert(s.len() > 0, "U8.fmt_binary()")
    return 0
}

