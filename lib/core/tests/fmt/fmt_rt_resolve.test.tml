// Tests for core::fmt::rt — Placeholder::new, UnsafeArg
// NOTE: Count::resolve tests removed — zero-length array ref causes heap corruption
use test::{assert, assert_eq}
use core::fmt::rt::{Placeholder, UnsafeArg}

// === Placeholder::new ===

@test
func test_placeholder_new() -> I32 {
    let ph: Placeholder = Placeholder::new(5)
    assert_eq(ph.position, 5 as I64, "Placeholder::new position")
    return 0
}

@test
func test_placeholder_new_zero() -> I32 {
    let ph: Placeholder = Placeholder::new(0)
    assert_eq(ph.position, 0 as I64, "Placeholder::new position zero")
    return 0
}

// === UnsafeArg::new ===

@test
func test_unsafe_arg_new() -> I32 {
    let _ua: UnsafeArg = UnsafeArg::new()
    assert(true, "UnsafeArg::new should not crash")
    return 0
}
