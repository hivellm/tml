// Tests for fmt format methods (binary, octal, hex, exp)
use test

@test
func test_fmt_binary_i32() -> I32 {
    let x: I32 = 42
    let s: Str = x.fmt_binary()
    assert(s.len() > 0, "fmt_binary should produce output")
    return 0
}

@test
func test_fmt_octal_i32() -> I32 {
    let x: I32 = 42
    let s: Str = x.fmt_octal()
    assert(s.len() > 0, "fmt_octal should produce output")
    return 0
}

@test
func test_fmt_lower_hex_i32() -> I32 {
