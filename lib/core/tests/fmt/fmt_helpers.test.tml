// Tests for core::fmt::helpers â€” integer to string conversions
// Covers: u64_to_str, u64_digit_char, i8/i16/i32_to_str, u8/u16/u32_to_str
use test
use core::fmt::helpers::{u64_to_str, i8_to_str, i16_to_str, i32_to_str, u8_to_str, u16_to_str, u32_to_str}

// =============================================================================
// u64_to_str (also exercises u64_digit_char internally)
// =============================================================================

@test
func test_u64_to_str_zero() -> I32 {
    assert_eq(u64_to_str(0 as U64), "0", "u64 0")
    return 0
}

@test
func test_u64_to_str_positive() -> I32 {
    assert_eq(u64_to_str(42 as U64), "42", "u64 42")
    assert_eq(u64_to_str(1000 as U64), "1000", "u64 1000")
    return 0
}

@test
func test_u64_to_str_large() -> I32 {
    assert_eq(u64_to_str(999999 as U64), "999999", "u64 999999")
    return 0
}

// =============================================================================
// i8_to_str
// =============================================================================

@test
func test_i8_to_str() -> I32 {
    assert_eq(i8_to_str(0 as I8), "0", "i8 0")
    assert_eq(i8_to_str(42 as I8), "42", "i8 42")
    assert_eq(i8_to_str(127 as I8), "127", "i8 max")
    assert_eq(i8_to_str(-1 as I8), "-1", "i8 -1")
    assert_eq(i8_to_str(-128 as I8), "-128", "i8 min")
    return 0
}

