// Tests targeting uncovered fmt/impls to_string methods
use test
use core::fmt::impls

// =============================================================================
// to_string for integer types
// =============================================================================

@test
func test_i8_to_string() -> I32 {
    let a: I8 = 42 as I8
    let s: Str = a.to_string()
    assert(s.len() > 0, "I8 to_string")
    return 0
}

