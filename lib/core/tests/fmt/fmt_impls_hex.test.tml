// Tests for fmt/impls LowerHex and UpperHex implementations across all integer types
use test

// ==================== fmt_lower_hex ====================

@test
func test_u8_fmt_lower_hex() -> I32 {
    let a: U8 = 255 as U8
    let s: Str = a.fmt_lower_hex()
    assert(s.len() > 0, "U8.fmt_lower_hex()")
    return 0
}

