// Tests for Ord methods (.max(), .min()) on additional types
use test

// =============================================================================
// I8 Ord methods
// =============================================================================

@test
func test_i8_max() -> I32 {
    let a: I8 = 5
    let b: I8 = 10
    let r: I8 = a.max(b)
    assert_eq(r as I32, 10, "I8 5.max(10) = 10")
    return 0
}

@test
func test_i8_min() -> I32 {
    let a: I8 = 5
    let b: I8 = 10
    let r: I8 = a.min(b)
    assert_eq(r as I32, 5, "I8 5.min(10) = 5")
    return 0
}

