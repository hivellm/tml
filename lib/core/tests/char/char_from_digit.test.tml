// Tests for core::char::convert â€” from_digit and from_u32
use test::{assert, assert_eq}
use core::char::convert

@test
func test_from_u32_valid() -> I32 {
    let c = convert::from_u32(65 as U32)
    assert(c.is_just(), "65 is valid char")
    assert_eq(c.unwrap(), 'A', "65 is A")
    return 0
}

@test
func test_from_u32_zero() -> I32 {
    let c = convert::from_u32(0 as U32)
    assert(c.is_just(), "0 is valid char (null)")
    return 0
}

@test
func test_from_digit_decimal() -> I32 {
    let c = convert::from_digit(0 as U32, 10 as U32)
    assert(c.is_just(), "from_digit(0, 10) should succeed")
    assert_eq(c.unwrap(), '0', "digit 0 is char '0'")
    return 0
}

@test
func test_from_digit_nine() -> I32 {
    let c = convert::from_digit(9 as U32, 10 as U32)
    assert(c.is_just(), "from_digit(9, 10) should succeed")
    assert_eq(c.unwrap(), '9', "digit 9 is char '9'")
    return 0
}

