// Tests for core::intrinsics module - size_of and align_of
use test
use core::intrinsics::{size_of, align_of}

// ============================================================================
// Type information intrinsics - size_of
// ============================================================================

@test
func test_size_of_i8() -> I32 {
    let size: I64 = size_of[I8]()
    assert_eq(size, 1, "I8 is 1 byte")
    return 0
}

@test
func test_size_of_i16() -> I32 {
    let size: I64 = size_of[I16]()
    assert_eq(size, 2, "I16 is 2 bytes")
    return 0
}

@test
func test_size_of_i32() -> I32 {
    let size: I64 = size_of[I32]()
    assert_eq(size, 4, "I32 is 4 bytes")
    return 0
}

@test
func test_size_of_i64() -> I32 {
    let size: I64 = size_of[I64]()
    assert_eq(size, 8, "I64 is 8 bytes")
    return 0
}

@test
func test_size_of_u8() -> I32 {
