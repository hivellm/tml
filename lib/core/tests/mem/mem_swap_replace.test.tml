// Tests for core::mem â€” swap, replace, size_of, align_of
use test::{assert, assert_eq}
use core::mem

@test
func test_size_of_i32() -> I32 {
    let s = mem::size_of[I32]()
    assert_eq(s, 4, "size_of I32 should be 4")
    return 0
}

@test
func test_size_of_i64() -> I32 {
    let s = mem::size_of[I64]()
    assert_eq(s, 8, "size_of I64 should be 8")
    return 0
}

@test
func test_size_of_i8() -> I32 {
    let s = mem::size_of[I8]()
    assert_eq(s, 1, "size_of I8 should be 1")
    return 0
}

@test
func test_align_of_i32() -> I32 {
    let a = mem::align_of[I32]()
    assert_eq(a, 4, "align_of I32 should be 4")
    return 0
}

@test
func test_align_of_i64() -> I32 {
    let a = mem::align_of[I64]()
    assert_eq(a, 8, "align_of I64 should be 8")
    return 0
}
