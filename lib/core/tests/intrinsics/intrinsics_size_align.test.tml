// Tests for core::intrinsics â€” size_of and align_of for various types
use test::{assert, assert_eq}
use core::intrinsics::{size_of, align_of}

@test
func test_size_of_i8() -> I32 {
    assert_eq(size_of[I8](), 1 as I64, "size_of I8 = 1")
    return 0
}

@test
func test_size_of_i16() -> I32 {
    assert_eq(size_of[I16](), 2 as I64, "size_of I16 = 2")
    return 0
}

@test
func test_size_of_i32() -> I32 {
    assert_eq(size_of[I32](), 4 as I64, "size_of I32 = 4")
    return 0
}

@test
func test_size_of_i64() -> I32 {
    assert_eq(size_of[I64](), 8 as I64, "size_of I64 = 8")
    return 0
}

@test
func test_size_of_u8() -> I32 {
    assert_eq(size_of[U8](), 1 as I64, "size_of U8 = 1")
    return 0
}

@test
func test_size_of_u16() -> I32 {
    assert_eq(size_of[U16](), 2 as I64, "size_of U16 = 2")
    return 0
}

@test
func test_size_of_u32() -> I32 {
    assert_eq(size_of[U32](), 4 as I64, "size_of U32 = 4")
    return 0
}

@test
func test_size_of_u64() -> I32 {
    assert_eq(size_of[U64](), 8 as I64, "size_of U64 = 8")
    return 0
}

@test
func test_size_of_f32() -> I32 {
    assert_eq(size_of[F32](), 4 as I64, "size_of F32 = 4")
    return 0
}

@test
func test_size_of_f64() -> I32 {
    assert_eq(size_of[F64](), 8 as I64, "size_of F64 = 8")
    return 0
}

@test
func test_size_of_bool() -> I32 {
    assert_eq(size_of[Bool](), 1 as I64, "size_of Bool = 1")
    return 0
}

@test
func test_align_of_i32() -> I32 {
    assert_eq(align_of[I32](), 4 as I64, "align_of I32 = 4")
    return 0
}

@test
func test_align_of_i64() -> I32 {
    assert_eq(align_of[I64](), 8 as I64, "align_of I64 = 8")
    return 0
}

@test
func test_align_of_u8() -> I32 {
    assert_eq(align_of[U8](), 1 as I64, "align_of U8 = 1")
    return 0
