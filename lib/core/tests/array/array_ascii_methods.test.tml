// Tests for core::array â€” basic array indexing and U8 operations
use test::{assert, assert_eq}

@test
func test_array_u8_indexing() -> I32 {
    let bytes: [U8; 4] = [65, 66, 67, 68]
    assert_eq(bytes[0] as I32, 65, "index 0 should be 65 (A)")
    assert_eq(bytes[1] as I32, 66, "index 1 should be 66 (B)")
    assert_eq(bytes[2] as I32, 67, "index 2 should be 67 (C)")
    assert_eq(bytes[3] as I32, 68, "index 3 should be 68 (D)")
    return 0
}

@test
func test_array_u8_comparison() -> I32 {
    let a: [U8; 3] = [1, 2, 3]
    let b: [U8; 3] = [1, 2, 3]
    assert_eq(a[0] as I32, b[0] as I32, "same index should match")
    assert_eq(a[2] as I32, b[2] as I32, "last index should match")
    return 0
}

@test
func test_array_u8_boundary_values() -> I32 {
    let bounds: [U8; 3] = [0, 127, 255]
    assert_eq(bounds[0] as I32, 0, "min U8 should be 0")
    assert_eq(bounds[1] as I32, 127, "mid U8 should be 127")
    assert_eq(bounds[2] as I32, 255, "max U8 should be 255")
    return 0
}
