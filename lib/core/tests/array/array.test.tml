func test_array_first_last_large() -> I32 {
    let arr: [I32; 6] = [10, 20, 30, 40, 50, 60]
    let f: Maybe[ref I32] = arr.first()
    let l: Maybe[ref I32] = arr.last()
    assert(f.is_just(), "first() should be Just")
