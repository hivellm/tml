func test_array_get_out_of_bounds() -> I32 {
    let arr: [I32; 3] = [10, 20, 30]
    let val: Maybe[ref I32] = arr.get(5)
    assert(val.is_nothing(), "get(5) should be Nothing for 3-elem array")
    return 0
}

