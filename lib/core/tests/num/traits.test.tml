// Tests for core::num::traits - Zero, One, Bounded
use test::{assert, assert_eq}
use core::num::traits::{Zero, One, Bounded}

// --- I32 ---

@test
func test_i32_zero() -> I32 {
    let z: I32 = I32::zero()
    assert_eq(z, 0, "I32::zero() is 0")
    assert(z.is_zero(), "0 is zero")
    assert(not 5.is_zero(), "5 is not zero")
    return 0
}

@test
func test_i32_one() -> I32 {
    let o: I32 = I32::one()
    assert_eq(o, 1, "I32::one() is 1")
    assert(o.is_one(), "1 is one")
    assert(not 5.is_one(), "5 is not one")
    return 0
}

@test
func test_i32_bounded() -> I32 {
    assert_eq(I32::min_value(), -2147483648, "I32 min")
    assert_eq(I32::max_value(), 2147483647, "I32 max")
    return 0
}

// --- I8 ---

@test
func test_i8_zero_one() -> I32 {
    let z: I8 = I8::zero()
    assert(z.is_zero(), "I8 zero")
    let o: I8 = I8::one()
    assert(o.is_one(), "I8 one")
    return 0
}

@test
func test_i8_bounded() -> I32 {
    assert_eq(I8::min_value() as I32, -128, "I8 min")
    assert_eq(I8::max_value() as I32, 127, "I8 max")
    return 0
}

// --- U8 ---

@test
func test_u8_zero_one_bounded() -> I32 {
    let z: U8 = U8::zero()
    assert(z.is_zero(), "U8 zero")
    let o: U8 = U8::one()
    assert(o.is_one(), "U8 one")
    assert_eq(U8::min_value() as I32, 0, "U8 min")
    assert_eq(U8::max_value() as I32, 255, "U8 max")
    return 0
}

