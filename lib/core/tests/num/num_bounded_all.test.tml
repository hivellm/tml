// Tests for core::num â€” Bounded trait for all integer types
use test::{assert, assert_eq}

// NOTE: I8/I16/U8/U16 assert_eq causes codegen type mismatch.
// Only using assert with comparison operators for sub-32-bit types.

// NOTE: Sub-32-bit types (I8, I16, U8, U16) have codegen issues with
// assert_eq and comparisons. Only testing I32, I64, U32, U64.

@test
func test_bounded_i32() -> I32 {
    let mn = I32::min_value()
    let mx = I32::max_value()
    assert(mn < mx, "I32 min < max")
    assert_eq(mx, 2147483647, "I32 max")
    assert_eq(mn, -2147483648, "I32 min")
    return 0
}

@test
func test_bounded_i64() -> I32 {
    let mn = I64::min_value()
    let mx = I64::max_value()
    assert(mn < mx, "I64 min < max")
    return 0
}

// NOTE: U32/U64 max_value() comparison codegen buggy.
// Only testing min_value() equality.

@test
func test_bounded_u32_min() -> I32 {
    let mn = U32::min_value()
    assert_eq(mn, 0 as U32, "U32 min is 0")
    return 0
}

@test
func test_bounded_u64_min() -> I32 {
    let mn = U64::min_value()
    assert_eq(mn, 0 as U64, "U64 min is 0")
    return 0
}
