//! Base16 (hexadecimal) encoding per RFC 4648.
//!
//! This module re-exports `core::encoding::hex` functions under the base16 name,
//! providing RFC 4648 naming consistency with other baseN modules.
//!
//! # Examples
//!
//! ```tml
//! use core::encoding::base16
//!
//! assert(base16::encode("Hi") == "4869")
//! assert(base16::decode("4869") == Ok("Hi"))
//! ```

use core::str
use core::encoding::hex

/// Encode a string's bytes as lowercase base16 (hexadecimal).
@allocates
pub func encode(input: Str) -> Str {
    return hex::encode(input)
}

/// Encode a string's bytes as uppercase base16 (hexadecimal).
@allocates
pub func encode_upper(input: Str) -> Str {
    return hex::encode_upper(input)
}

/// Decode a base16 (hexadecimal) string back to original bytes.
pub func decode(input: Str) -> Outcome[Str, Str] {
    return hex::decode(input)
}
