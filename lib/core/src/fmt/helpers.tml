//! Internal helper functions for formatting.
//!
//! This module provides helper functions used by the formatting implementations.
//! These are internal utilities and should not be used directly.

// ============================================================================
// Integer to string conversion (pure TML)
// ============================================================================

// Count decimal digits using comparisons (no divisions).
// Binary search over powers of 10 - avg ~4 comparisons for any I64.
func count_digits_u64(n: U64) -> I64 {
    if n < 10 { return 1 }
    if n < 100 { return 2 }
    if n < 1000 { return 3 }
    if n < 10000 { return 4 }
    if n < 100000 { return 5 }
    if n < 1000000 { return 6 }
    if n < 10000000 { return 7 }
    if n < 100000000 { return 8 }
    if n < 1000000000 { return 9 }
    if n < 10000000000 { return 10 }
    if n < 100000000000 { return 11 }
    if n < 1000000000000 { return 12 }
    if n < 10000000000000 { return 13 }
    if n < 100000000000000 { return 14 }
    if n < 1000000000000000 { return 15 }
    if n < 10000000000000000 { return 16 }
    if n < 100000000000000000 { return 17 }
    if n < 1000000000000000000 { return 18 }
    if n < 10000000000000000000 { return 19 }
    return 20
}

/// Converts an I64 to its decimal string representation.
/// Uses two-digit lookup table for fast conversion (half the divisions).
@allocates
pub func i64_to_str(value: I64) -> Str {
    // Two-digit lookup table: "00" "01" "02" ... "99" (200 chars)
    let DIGIT_PAIRS: Str = "00010203040506070809101112131415161718192021222324252627282930313233343536373839404142434445464748495051525354555657585960616263646566676869707172737475767778798081828384858687888990919293949596979899"
    if value == 0 {
        return "0"
    }

    let is_negative: Bool = value < 0
    let min_i64: I64 = -9223372036854775807 - 1

    // Handle MIN_VALUE specially: can't negate it
    if is_negative and value == min_i64 {
        return "-9223372036854775808"
    }

    var v: I64 = value
    if is_negative {
        v = 0 - v
    }

    // Count digits with comparisons (no divisions needed for counting)
    let num_digits: I64 = count_digits_u64(v as U64)
    let total_len: I64 = if is_negative { num_digits + 1 } else { num_digits }
    let buf: *U8 = lowlevel { mem_alloc(total_len + 1) } as *U8
    let buf_addr: I64 = buf as I64
    let table_addr: I64 = DIGIT_PAIRS as I64

    // Write null terminator
    lowlevel { ptr_write[U8]((buf_addr + total_len) as *U8, 0 as U8) }

    // Write digits backwards, two at a time using lookup table
    var pos: I64 = total_len - 1
    loop (v >= 100) {
        let d2: I64 = v % 100
        v = v / 100
        let idx: I64 = d2 * 2
        let c1: U8 = lowlevel { ptr_read[U8]((table_addr + idx + 1) as *U8) }
        let c0: U8 = lowlevel { ptr_read[U8]((table_addr + idx) as *U8) }
        lowlevel { ptr_write[U8]((buf_addr + pos) as *U8, c1) }
        lowlevel { ptr_write[U8]((buf_addr + pos - 1) as *U8, c0) }
        pos = pos - 2
    }

    // Handle remaining 1-2 digits
    if v >= 10 {
        let idx: I64 = v * 2
        let c1: U8 = lowlevel { ptr_read[U8]((table_addr + idx + 1) as *U8) }
        let c0: U8 = lowlevel { ptr_read[U8]((table_addr + idx) as *U8) }
        lowlevel { ptr_write[U8]((buf_addr + pos) as *U8, c1) }
        lowlevel { ptr_write[U8]((buf_addr + pos - 1) as *U8, c0) }
    } else if v > 0 {
        let digit: U8 = v as U8 + (48 as U8)
        lowlevel { ptr_write[U8]((buf_addr + pos) as *U8, digit) }
    }

    // Write sign if negative
    if is_negative {
        lowlevel { ptr_write[U8](buf, 45 as U8) }
    }

    return buf as Str
}

/// Converts a U64 to its decimal string representation.
/// Uses two-digit lookup table for fast conversion (half the divisions).
@allocates
pub func u64_to_str(value: U64) -> Str {
    let DIGIT_PAIRS: Str = "00010203040506070809101112131415161718192021222324252627282930313233343536373839404142434445464748495051525354555657585960616263646566676869707172737475767778798081828384858687888990919293949596979899"
    if value == 0 {
        return "0"
    }

    let num_digits: I64 = count_digits_u64(value)
    let buf: *U8 = lowlevel { mem_alloc(num_digits + 1) } as *U8
    let buf_addr: I64 = buf as I64
    let table_addr: I64 = DIGIT_PAIRS as I64

    // Write null terminator
    lowlevel { ptr_write[U8]((buf_addr + num_digits) as *U8, 0 as U8) }

    // Write digits backwards, two at a time
    var pos: I64 = num_digits - 1
    var v: U64 = value
    loop (v >= 100) {
        let d2: U64 = v % 100
        v = v / 100
        let idx: I64 = d2 as I64 * 2
        let c1: U8 = lowlevel { ptr_read[U8]((table_addr + idx + 1) as *U8) }
        let c0: U8 = lowlevel { ptr_read[U8]((table_addr + idx) as *U8) }
        lowlevel { ptr_write[U8]((buf_addr + pos) as *U8, c1) }
        lowlevel { ptr_write[U8]((buf_addr + pos - 1) as *U8, c0) }
        pos = pos - 2
    }

    // Handle remaining 1-2 digits
    if v >= 10 {
        let idx: I64 = v as I64 * 2
        let c1: U8 = lowlevel { ptr_read[U8]((table_addr + idx + 1) as *U8) }
        let c0: U8 = lowlevel { ptr_read[U8]((table_addr + idx) as *U8) }
        lowlevel { ptr_write[U8]((buf_addr + pos) as *U8, c1) }
        lowlevel { ptr_write[U8]((buf_addr + pos - 1) as *U8, c0) }
    } else if v > 0 {
        let digit: U8 = v as U8 + (48 as U8)
        lowlevel { ptr_write[U8]((buf_addr + pos) as *U8, digit) }
    }

    return buf as Str
}

// Internal: convert a digit 0-9 (as I64) to its string character
func i64_digit_char(d: I64) -> Str {
    return digit_to_char(d as I32)
}

// Internal: convert a digit 0-9 (as U64) to its string character
func u64_digit_char(d: U64) -> Str {
    return digit_to_char(d as I32)
}

