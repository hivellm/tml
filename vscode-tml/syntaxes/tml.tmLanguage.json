{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TML",
  "scopeName": "source.tml",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#preprocessor"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#builtins"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "preprocessor": {
      "patterns": [
        {
          "name": "meta.preprocessor.conditional.tml",
          "match": "^\\s*(#)(if|ifdef|ifndef|elif|else|endif)\\b(.*)$",
          "captures": {
            "1": {
              "name": "punctuation.definition.directive.tml"
            },
            "2": {
              "name": "keyword.control.preprocessor.tml"
            },
            "3": {
              "patterns": [
                {
                  "include": "#preprocessor-expression"
                }
              ]
            }
          }
        },
        {
          "name": "meta.preprocessor.define.tml",
          "match": "^\\s*(#)(define|undef)\\s+([A-Za-z_][A-Za-z0-9_]*)(.*)$",
          "captures": {
            "1": {
              "name": "punctuation.definition.directive.tml"
            },
            "2": {
              "name": "keyword.control.preprocessor.tml"
            },
            "3": {
              "name": "entity.name.constant.preprocessor.tml"
            },
            "4": {
              "name": "string.unquoted.preprocessor.value.tml"
            }
          }
        },
        {
          "name": "meta.preprocessor.diagnostic.tml",
          "match": "^\\s*(#)(error|warning)\\s+(.*)$",
          "captures": {
            "1": {
              "name": "punctuation.definition.directive.tml"
            },
            "2": {
              "name": "keyword.control.preprocessor.diagnostic.tml"
            },
            "3": {
              "name": "string.unquoted.preprocessor.message.tml"
            }
          }
        }
      ]
    },
    "preprocessor-expression": {
      "patterns": [
        {
          "name": "keyword.operator.preprocessor.tml",
          "match": "\\b(and|or|not)\\b|&&|\\|\\||!"
        },
        {
          "name": "keyword.other.preprocessor.defined.tml",
          "match": "\\b(defined)\\s*\\(\\s*([A-Za-z_][A-Za-z0-9_]*)\\s*\\)",
          "captures": {
            "1": {
              "name": "keyword.other.preprocessor.defined.tml"
            },
            "2": {
              "name": "entity.name.constant.preprocessor.tml"
            }
          }
        },
        {
          "name": "constant.other.preprocessor.symbol.tml",
          "match": "\\b(WINDOWS|LINUX|MACOS|X86_64|ARM64|AARCH64|X86|ARM|DEBUG|RELEASE|TML_VERSION)\\b"
        },
        {
          "name": "entity.name.constant.preprocessor.tml",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.documentation.ai.tml",
          "match": "//\\s*@ai:(context|intent|invariant|warning|example):.*$",
          "captures": {
            "0": {
              "name": "comment.line.documentation.ai.tml"
            }
          }
        },
        {
          "name": "comment.line.documentation.tml",
          "match": "///.*$"
        },
        {
          "name": "comment.line.documentation.module.tml",
          "match": "//!.*$"
        },
        {
          "name": "comment.line.double-slash.tml",
          "match": "//.*$"
        },
        {
          "name": "comment.block.tml",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            {
              "include": "#comments"
            }
          ]
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "meta.directive.tml",
          "match": "@(test|bench|benchmark|when|unless|auto|hint|deprecated|stable|unstable|lowlevel|export|doc|extern|link)\\b",
          "captures": {
            "1": {
              "name": "storage.modifier.directive.tml"
            }
          }
        },
        {
          "name": "meta.directive.with-args.tml",
          "begin": "@(test|when|unless|auto|hint|deprecated|doc|extern|link)\\s*\\(",
          "end": "\\)",
          "beginCaptures": {
            "1": {
              "name": "storage.modifier.directive.tml"
            }
          },
          "patterns": [
            {
              "include": "#literals"
            },
            {
              "include": "#keywords"
            }
          ]
        },
        {
          "name": "meta.stable-id.tml",
          "match": "@[0-9a-fA-F]{8}\\b",
          "captures": {
            "0": {
              "name": "constant.numeric.stable-id.tml"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tml",
          "match": "\\b(if|then|else|when|loop|while|for|in|break|continue|return|catch|do)\\b"
        },
        {
          "name": "keyword.declaration.tml",
          "match": "\\b(module|import|public|private|func|type|enum|behavior|extend|impl|const|let|var|where|use|mod|crate|super|pub|decorator|namespace)\\b"
        },
        {
          "name": "keyword.control.oop.tml",
          "match": "\\b(class|interface|extends|implements|override|virtual|abstract|sealed|base|new|prop)\\b"
        },
        {
          "name": "storage.modifier.access.tml",
          "match": "\\b(protected|private|static)\\b"
        },
        {
          "name": "keyword.operator.logical.tml",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "keyword.operator.bitwise.word.tml",
          "match": "\\b(shl|shr|xor)\\b"
        },
        {
          "name": "keyword.other.tml",
          "match": "\\b(this|This|ref|mut|dyn|lowlevel|unsafe|async|await|with|quote|as|is)\\b"
        },
        {
          "name": "keyword.control.range.tml",
          "match": "\\b(to|through)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.tml",
          "match": "\\b(Bool|I8|I16|I32|I64|I128|U8|U16|U32|U64|U128|F32|F64|String|Str|Char|Unit|Never|Ptr)\\b"
        },
        {
          "name": "storage.type.builtin.tml",
          "match": "\\b(List|Map|HashMap|Set|Vec|Buffer|Maybe|Outcome|Result|Option|Heap|Shared|Sync|Instant|Duration|Layout|Allocator|Iterator|IntoIterator|FromIterator|Text)\\b"
        },
        {
          "name": "constant.language.enum-variant.tml",
          "match": "\\b(Just|Nothing|Ok|Err|Less|Equal|Greater)\\b"
        },
        {
          "name": "storage.type.builtin.ordering.tml",
          "match": "\\b(Ordering)\\b"
        },
        {
          "name": "storage.type.pointer.tml",
          "match": "\\*\\s*[A-Z][a-zA-Z0-9_]*",
          "comment": "Pointer type: *I32, *Bool, *CustomType"
        },
        {
          "name": "entity.name.type.tml",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.language.boolean.tml",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.tml",
          "match": "\\b(null)\\b"
        },
        {
          "name": "constant.numeric.integer.hexadecimal.tml",
          "match": "\\b0x[0-9a-fA-F_]+(i8|i16|i32|i64|i128|u8|u16|u32|u64|u128)?\\b"
        },
        {
          "name": "constant.numeric.integer.binary.tml",
          "match": "\\b0b[01_]+(i8|i16|i32|i64|i128|u8|u16|u32|u64|u128)?\\b"
        },
        {
          "name": "constant.numeric.integer.octal.tml",
          "match": "\\b0o[0-7_]+(i8|i16|i32|i64|i128|u8|u16|u32|u64|u128)?\\b"
        },
        {
          "name": "constant.numeric.float.tml",
          "match": "\\b[0-9][0-9_]*\\.[0-9_]+([eE][+-]?[0-9_]+)?(f32|f64)?\\b"
        },
        {
          "name": "constant.numeric.integer.decimal.tml",
          "match": "\\b[0-9][0-9_]*(i8|i16|i32|i64|i128|u8|u16|u32|u64|u128)?\\b"
        },
        {
          "name": "string.quoted.triple.tml",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            {
              "include": "#string-escapes"
            }
          ]
        },
        {
          "name": "string.quoted.raw.tml",
          "begin": "r#*\"",
          "end": "\"#*",
          "patterns": []
        },
        {
          "name": "string.quoted.double.tml",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "include": "#string-escapes"
            }
          ]
        },
        {
          "name": "string.quoted.byte.tml",
          "begin": "b\"",
          "end": "\"",
          "patterns": [
            {
              "include": "#string-escapes"
            }
          ]
        },
        {
          "name": "string.quoted.single.tml",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "include": "#string-escapes"
            }
          ]
        },
        {
          "include": "#template-literal"
        }
      ]
    },
    "template-literal": {
      "name": "string.template.tml",
      "begin": "`",
      "end": "`",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.template.begin.tml"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.template.end.tml"
        }
      },
      "patterns": [
        {
          "include": "#template-interpolation"
        },
        {
          "include": "#string-escapes"
        }
      ]
    },
    "template-interpolation": {
      "name": "meta.template.expression.tml",
      "begin": "\\{",
      "end": "\\}",
      "beginCaptures": {
        "0": {
          "name": "punctuation.section.interpolation.begin.tml"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.section.interpolation.end.tml"
        }
      },
      "patterns": [
        {
          "include": "#comments"
        },
        {
          "include": "#keywords"
        },
        {
          "include": "#types"
        },
        {
          "include": "#literals"
        },
        {
          "include": "#operators"
        },
        {
          "include": "#builtins"
        },
        {
          "include": "#functions"
        },
        {
          "include": "#variables"
        }
      ]
    },
    "string-escapes": {
      "patterns": [
        {
          "name": "constant.character.escape.tml",
          "match": "\\\\(\\\\|\"|'|n|r|t|0|\\{|\\}|x[0-9a-fA-F]{2}|u\\{[0-9a-fA-F]+\\})"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.tml",
          "match": "(=|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=)"
        },
        {
          "name": "keyword.operator.comparison.tml",
          "match": "(==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.arithmetic.tml",
          "match": "(\\+|-|\\*\\*|\\*|/|%)"
        },
        {
          "name": "keyword.operator.bitwise.tml",
          "match": "(&|\\||\\^|~|<<|>>)"
        },
        {
          "name": "keyword.operator.ternary.tml",
          "match": "(\\?|:)"
        },
        {
          "name": "keyword.operator.arrow.tml",
          "match": "->"
        },
        {
          "name": "keyword.operator.propagate.tml",
          "match": "!"
        },
        {
          "name": "keyword.operator.path.tml",
          "match": "::"
        },
        {
          "name": "keyword.operator.access.tml",
          "match": "\\."
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.atomic.tml",
          "match": "\\b(atomic_load|atomic_store|atomic_add|atomic_sub|atomic_exchange|atomic_cas|atomic_and|atomic_or|atomic_xor)\\b"
        },
        {
          "name": "support.function.builtin.fence.tml",
          "match": "\\b(fence|fence_acquire|fence_release)\\b"
        },
        {
          "name": "support.function.builtin.sync.tml",
          "match": "\\b(spin_lock|spin_unlock|spin_trylock|thread_yield|thread_id)\\b"
        },
        {
          "name": "support.function.builtin.memory.tml",
          "match": "\\b(alloc|dealloc|mem_alloc|mem_alloc_zeroed|mem_realloc|mem_free|mem_copy|mem_move|mem_set|mem_zero|mem_compare|mem_eq|alloc_global|alloc_global_zeroed|dealloc_global|realloc_global|alloc_single|alloc_array|alloc_array_zeroed|dealloc_single|dealloc_array|ptr_offset|read_i32|read_i64|write_i32|write_i64)\\b"
        },
        {
          "name": "support.function.builtin.io.tml",
          "match": "\\b(print|println|eprint|eprintln|panic|assert|assert_eq|assert_ne|dbg)\\b"
        },
        {
          "name": "support.function.builtin.string.tml",
          "match": "\\b(str_len|str_eq|str_hash)\\b"
        },
        {
          "name": "support.function.builtin.time.tml",
          "match": "\\b(time_ms|time_us|time_ns|sleep)\\b"
        },
        {
          "name": "support.function.builtin.meta.tml",
          "match": "\\b(size_of|align_of|drop|forget)\\b"
        },
        {
          "name": "support.function.builtin.type-method.tml",
          "match": "\\.(is_just|is_nothing|is_ok|is_err|unwrap|unwrap_or|unwrap_or_else|unwrap_or_default|unwrap_err|expect|expect_err|map|map_or|map_or_else|map_err|and_then|alt|or_else|xor|also|filter|ok_or|ok_or_else|ok|err|zip|zip_with|flatten|iter|contains)\\b",
          "comment": "Maybe[T] and Outcome[T,E] builtin methods"
        },
        {
          "name": "support.function.builtin.primitive-method.tml",
          "match": "\\.(hash|duplicate|to_string|debug_string|cmp|is_less|is_equal|is_greater)\\b",
          "comment": "Primitive type methods"
        },
        {
          "name": "support.function.builtin.static-method.tml",
          "match": "::(from|default)\\b",
          "comment": "Static type methods like I32::from(), I32::default()"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.declaration.tml",
          "match": "\\b(func)\\s+([a-z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": {
              "name": "keyword.declaration.function.tml"
            },
            "2": {
              "name": "entity.name.function.tml"
            }
          }
        },
        {
          "name": "entity.name.function.call.tml",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.other.tml",
          "match": "\\b[A-Z][A-Z0-9_]*\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.tml",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}