use test
use core::time

// Time Function Tests

@test
func test_time_ms_positive() -> I32 {
    let t: I32 = time_ms()
    assert(t > 0, "time_ms should return positive value")
    return 0
}

@test
func test_time_ms_increases() -> I32 {
    let t1: I32 = time_ms()
    let mut i: I32 = 0
    loop {
        if i >= 1000 then break
        i = i + 1
    }
    let t2: I32 = time_ms()
    assert(t2 >= t1, "time_ms should increase or stay same")
    return 0
}

@test
func test_elapsed_ms_basic() -> I32 {
    let start: I32 = time_ms()
    let elapsed: I32 = elapsed_ms(start)
    assert(elapsed >= 0, "elapsed_ms should be non-negative")
    return 0
}
