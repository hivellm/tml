// Note: time_ms() returns I32 which can wrap on long-running systems.
// Use subtraction for relative comparisons to handle wrap-around.

@test
func test_time_ms() {
    let t: I32 = time_ms()
    // Just verify the function runs and returns a value
    let check: Bool = t == t
    assert(check, "time_ms should return a value")
}

