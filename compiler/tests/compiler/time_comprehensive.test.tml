// ============ Time Monotonicity ============

@test
func test_time_ms_monotonic() {
    let t1: I32 = time_ms()

    // Do some work
    let mut sum: I32 = 0
    let mut i: I32 = 0
    loop (i < 100) {
        sum = sum + i
        i = i + 1
    }

    let t2: I32 = time_ms()
    // Use subtraction to handle wrap-around
    let diff: I32 = t2 - t1
    assert(diff >= 0, "time should be monotonic")
}

// ============ Duration Calculation ============

@test
func test_elapsed_time() {
    let start: I32 = time_ms()

    // Do some work
    let mut product: I32 = 1
    let mut i: I32 = 1
    loop (i <= 10) {
        product = product * i
        i = i + 1
    }

    let end: I32 = time_ms()
    let elapsed: I32 = end - start

    assert(elapsed >= 0, "elapsed time should be non-negative")
}

// ============ Time Comparison ============

@test
func test_time_comparison() {
    let t1: I32 = time_ms()
    let t2: I32 = time_ms()

    // Use subtraction to handle wrap-around
    let diff: I32 = t2 - t1
    assert(diff >= 0, "later time should be >= earlier time")
}

func main() -> I32 {
    test_time_ms()
    test_time_us()
    test_time_ns()
    test_time_ms_monotonic()
    test_elapsed_time()
    test_time_comparison()
    print("PASS: All tests passed!")
    return 0
}
