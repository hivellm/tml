// Test for @should_panic decorator
use test

// This test should pass because it panics
@test
@should_panic
func test_basic_panic() {
    panic("This test panics!")
}

// This test should pass because it panics with expected message
@test
@should_panic(expected = "division")
func test_panic_with_message() {
    panic("Error: division by zero")
}

// Regular test to ensure normal tests still work
@test
func test_normal() {
    println("test_basic_panic passed (panic was caught)")
    println("test_panic_with_message passed (panic with 'division' message caught)")
    assert(true, "This should pass")
    println("test_normal passed!")
    println("All @should_panic tests passed!")
}
