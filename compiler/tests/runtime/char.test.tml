// ============ char_to_uppercase tests ============

@test
func test_char_to_uppercase_lower() -> I32 {
    let upper: Char = char_to_uppercase('a')
    // Compare char codes: 'A' = 65
    assert(char_code(upper) == 65, "'a' to uppercase should be 'A'")
    return 0
}

@test
func test_char_to_uppercase_already_upper() -> I32 {
    let upper: Char = char_to_uppercase('A')
    assert(char_code(upper) == 65, "'A' to uppercase should still be 'A'")
    return 0
}

// ============ char_to_lowercase tests ============

@test
func test_char_to_lowercase_upper() -> I32 {
    let lower: Char = char_to_lowercase('A')
    // Compare char codes: 'a' = 97
    assert(char_code(lower) == 97, "'A' to lowercase should be 'a'")
    return 0
}

@test
func test_char_to_lowercase_already_lower() -> I32 {
    let lower: Char = char_to_lowercase('a')
    assert(char_code(lower) == 97, "'a' to lowercase should still be 'a'")
    return 0
}

// ============ char_to_digit tests ============

@test
func test_char_to_digit_decimal() -> I32 {
    let d: I32 = char_to_digit('5', 10)
    assert(d == 5, "'5' should convert to 5 in base 10")
    return 0
}

@test
func test_char_to_digit_hex() -> I32 {
    let d: I32 = char_to_digit('a', 16)
    assert(d == 10, "'a' should convert to 10 in base 16")
    return 0
}

@test
func test_char_to_digit_invalid() -> I32 {
    let d: I32 = char_to_digit('g', 16)
    assert(d == -1, "'g' should return -1 in base 16")
    return 0
}

// ============ char_from_digit tests ============

@test
func test_char_from_digit_decimal() -> I32 {
    let c: Char = char_from_digit(5, 10)
    assert(char_code(c) == 53, "5 should convert to '5' (code 53)")
    return 0
}

@test
func test_char_from_digit_hex() -> I32 {
    let c: Char = char_from_digit(10, 16)
    assert(char_code(c) == 97, "10 should convert to 'a' (code 97)")
    return 0
}

// ============ char_code tests ============

@test
func test_char_code_letter() -> I32 {
    let code: I32 = char_code('A')
    assert(code == 65, "'A' should have code 65")
    return 0
}

@test
func test_char_code_digit() -> I32 {
    let code: I32 = char_code('0')
    assert(code == 48, "'0' should have code 48")
    return 0
}

// ============ char_from_code tests ============

@test
func test_char_from_code_letter() -> I32 {
    let c: Char = char_from_code(65)
    assert(char_code(c) == 65, "code 65 should produce 'A'")
    return 0
}

@test
func test_char_from_code_digit() -> I32 {
    let c: Char = char_from_code(48)
    assert(char_code(c) == 48, "code 48 should produce '0'")
    return 0
}
