use test

// Char Operation Tests
// Tests for char_is_*, char_to_*, char_code, char_from_code

// ============ char_is_alphabetic tests ============

@test
func test_char_is_alphabetic_letter() -> I32 {
    assert(char_is_alphabetic('a'), "'a' should be alphabetic")
    assert(char_is_alphabetic('Z'), "'Z' should be alphabetic")
    return 0
}

@test
func test_char_is_alphabetic_digit() -> I32 {
    assert(not char_is_alphabetic('5'), "'5' should not be alphabetic")
    return 0
}

@test
func test_char_is_alphabetic_special() -> I32 {
    assert(not char_is_alphabetic('!'), "'!' should not be alphabetic")
    return 0
}

